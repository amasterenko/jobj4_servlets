<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>GreetingServlet</servlet-name>
    <servlet-class>ru.job4j.servlets.GreetingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GreetingServletJson</servlet-name>
    <servlet-class>ru.job4j.servlets.GreetingServletJson</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GreetingServlet</servlet-name>
    <url-pattern>/greet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GreetingServletJson</servlet-name>
    <url-pattern>/greetjson</url-pattern>
  </servlet-mapping>
</web-app>
